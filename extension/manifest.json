{
  "manifest_version": 3,
  "name": "GreenLoop Eco-Shopper",
  "version": "1.1",
  "description": "Suggests eco-friendly alternatives while you shop.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://www.amazon.com/*",
    "*://www.walmart.com/*",
    "http://localhost:3001/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.amazon.com/*",
        "*://www.walmart.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content_styles.css"
      ]
    },
    {
      "matches": [
        "http://localhost:3001/auth/extension/success*"
      ],
      "js": [
        "auth-capture.js"
      ]
    }
  ]
}